{
  "name": "mbs-planner",
  "version": "1.0.0",
  "description": "MBS Planner - Web App PWA per gestione studenti e programmazione",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd app && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd app && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd app && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd app && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "install:all": "npm install && cd app && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enricorizzi-cmd/MBS-Planner.git"
  },
  "keywords": ["pwa", "react", "supabase", "typescript", "education"],
  "author": "Enrico Rizzi",
  "license": "MIT"
}

